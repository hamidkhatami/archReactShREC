{
  "compilerOptions": {
    "composite": true,
    // فایل‌های کانفیگ را به ES modules تبدیل می‌کند
    "module": "ESNext", 
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"] // برای Vitest لازم است
  },
  "include": ["vite.config.ts"] 
}